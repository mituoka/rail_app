<div class="d-flex align-items-center">
    <h1>掲示板一覧</h1>
    <div class="ml-auto boards__linkBox">
        <%= link_to '新規作成',new_board_path,class:'btn btn-outline-dark' %>
    </div>
</div>
<table class="table table-hover boards__table">
    <thead class="thead-dark">
        <tr>
            <th>ID</th>
            <th>タイトル</th>
            <th>作成者</th>
            <th>作成日時</th>
            <th>更新日時</th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        <% @boards.each do |boards| %>
        <tr>
            <th><%= boards.id %></th>
            <td><%= boards.title %></td>
            <td><%= boards.name %></td>
            <td><%= boards.created_at.to_s(:datetime_jp) %></td>
            <td><%= boards.updated_at.to_s(:datetime_jp) %></td>
            <td><%= link_to "詳細", boards,class:'btn btn-outline-dark' %></td>
            <td><%= link_to "削除", boards,class:'btn btn-outline-dark' ,method: :delete %></td>
        </tr>
        <% end %>
    </tbody>
</table>
<%=paginate @boards %>